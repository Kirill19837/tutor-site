@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>

@{
    var content = (TInnerForPageTop)Model.Content;
    var forTeacher = content.TFor == "teacher";
}
<section class="@content.TFor-top inner-top">
    <div class="container">
        <div class="inner-top__content">
            @if (!string.IsNullOrEmpty(content.TTitle))
            {
                <h1 class="inner-top__title big-title">@content.TTitle</h1>            
            }
            @if (!content.TsubTitle.IsNullOrWhiteSpace())
            {
                <p class="inner-top__subtitle">@content.TsubTitle</p>
            }               
            <div class="inner-top__images">     
                @if (content.TImages != null && content.TImages.Count() > 0)
                {
                    <div class="inner-top__image image-@(forTeacher ? "big" : "small")">
                        <img src="@content.TImages.ElementAt(0).Content.Url()" alt="Top image1">
                    </div>
                    @if (content.TImages.Count() > 1)
                    {
                        <div class="inner-top__image image-@(forTeacher ? "small" : "big")">
                            <img src="@content.TImages.ElementAt(1).Content.Url()" alt="Top image2">
                        </div>
                    }
                }
               
                @if (content.TDecors != null)
                {
                    @foreach (var decor in content.TDecors)
                    {
                        @await Html.PartialAsync("tutorPartials/TDecorItem", decor.Content)
                    }
                }
            </div>
        </div>
    </div>
</section>