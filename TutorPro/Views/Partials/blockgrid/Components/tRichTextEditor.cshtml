@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>

@{
    var content = (TRichTextEditor)Model.Content;
}

<section class="@(content.TPadding ? "text-content" : "")">
    <div class="@(content.TPadding ? "container" : "")">
        <div class="@(content.TPadding ? "text-content__inner" : "")" style="color:@content.TTextColor; background-color:@content.TBackgroundColor">
            <div style="color:@content.TTextColor" >
                @Html.Raw(content.TText)        
            </div>
        </div>
    </div>
</section>
