@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>

@{
    var content = (TScreenshots)Model.Content;
    var images = content.TImages;
}

<!-- Section with screenshots -->
<div class="screenshots">
    <div class="decor-bg radial-bg green"></div>
    <div class="decor-bg radial-bg orange"></div>
    <div class="screenshots__block-wrap">
        @if (images != null){
            @for (int i = 0; i < 2; i++)
            {
                <div class="screenshots__block">
                    <div class="screenshots__left">
                        <div class="screenshots__column1">
                            @foreach (var image in images.Take(2))
                            {
                                <img loading="lazy" src="@image.Content.Url()" alt="Image">
                            }
                        </div>
                        <div class="screenshots__column2">
                            @foreach (var image in images.Skip(2).Take(2))
                            {
                                <img loading="lazy" src="@image.Content.Url()" alt="Image">
                            }
                        </div>
                        <div class="screenshots__column3">
                            <div class="screenshots__column3-row">
                                @foreach (var image in images.Skip(4).Take(2))
                                {
                                    <img loading="lazy" src="@image.Content.Url()" alt="Image">
                                }
                            </div>
                            @if (images.Count() > 6)
                            {
                                <img loading="lazy" src="@images.ElementAt(6).Content.Url()" alt="Image">
                            }
                        </div>
                        <div class="screenshots__bottom">
                            @if (images.Count() > 7)
                            {
                                <img loading="lazy" src="@images.ElementAt(7).Content.Url()" alt="Image">
                            }
                        </div>
                    </div>
                    <div class="screenshots__right">
                        @if (images.Count() > 8)
                        {
                            <div class="big-image">
                                <img loading="lazy" src="@images.ElementAt(8).Content.Url()" alt="Image">
                            </div>
                        }
                        @if (images.Count() > 9)
                        {
                            <img loading="lazy" src="@images.ElementAt(9).Content.Url()" alt="Image">
                        }
                    </div>
                </div>
            }      
        }
    </div>
</div>