@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>

@{
    var content = (TBlockTitle)Model.Content;
    var fontWeight = content.TBold ? "bold" : "normal";
    var fontColor = content.TColor == null ? "black" : content.TColor;
    var fontSize = content.TSize == 0 ? 20 : content.TSize;
}

<p style="font-size:@content.TSize; font-weight:@fontWeight; color:@fontColor">@content.TTitle</p>

