@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>

@{
    var content = (TInformation)Model.Content;
}

<div class="about-info">
    <div class="container">
        <span class="decor-element points-1 parallax-element">
            <img src="~/images/icons/decor-elements/decor-points-orange.svg" alt="Decor points">
        </span>
        <span class="decor-element points-2 parallax-element">
            <img src="~/images/icons/decor-elements/decor-points-green-big.svg" alt="Decor points">
        </span>
        <div class="about-info__block">
            @if(content.TItems != null)
            {
                @foreach (var item in content.TItems)
                {
                    @await Html.PartialAsync("tutorPartials/TInfoItem", item.Content)
                }
            }          
        </div>
    </div>
</div>