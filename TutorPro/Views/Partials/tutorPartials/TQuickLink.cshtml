@using System.Globalization
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<TQuickLinks>
@{
    var pageName = ViewData["pageName"]?.ToString();

    var language = Umbraco.CultureDictionary.Culture.Name;   
}

<div class="footer__actions">
    <span class="footer__title medium-title">@Model.TQuickTitle</span>
    <ul class="footer__menu">
        @if(Model.TLinks != null)
        {
            @foreach(var link in Model.TLinks)
            {
                if(link.Content is TBlockLink newLink)
                {
                    if (newLink.TBlocks != null && newLink.TBlocks.Any())
                    {
                        @await Html.PartialAsync("tutorPartials/TFooterDropdown", newLink , ViewData)
                    }
                    else
                    {
                        <li class="footer__menu-item">
                            <a class="footer__menu-link @(pageName == newLink?.TUrl?.Name  ? "active" : "")" href="@newLink?.TUrl?.Url">@newLink?.TLinkTitle</a>
                        </li>
                    }
                    
                }             
            }
        }
    </ul>  
</div>