@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<HomePage>

<!-- Cookies block -->
<div class="cookies" id="cookies">
    <div class="cookies__container">
        <img loading="lazy" class="cookies__icon" src="@Model.TCookieIcon?.Url()" alt="Icon">
        <div class="cookies__info">
            <p class="cookies__text">@Model.TTopText</p>
            <p class="cookies__text">@Model.TBottomText</p>
            <div class="cookies__links">
                @if(Model.TCookieUrls != null)
                {
                    @foreach (var link in @Model.TCookieUrls)
                    {
                        <a class="cookies__link" href="@link.Url">@link.Name</a>
                    }
                }                        
            </div>
        </div>
        <a class="cookies__accept link link-orange" href="@Model.TCookieButton?.Content.TLink?.Url">@Model.TCookieButton?.Content.TButtonTitle</a>
    </div>
</div>
<script src="~/js/cookie.js" async></script>