{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            }
          ]
        }
      }
    ]
  },
  "Umbraco": {
    "CMS": {
      "Content": {
        "MacroErrors": "Throw"
      },
      "Hosting": {
        "Debug": true
      },
      "RuntimeMinification": {
        "UseInMemoryCache": true,
        "CacheBuster": "Timestamp"
      },
      "ModelsBuilder": {
        "ModelsDirectory": "~/TutorPro.Domain/Models/Generated", //if you run locally use ~/../TutorPro.Domain/Models/Generated
        "Enable": true,
        "ModelsMode": "SourceCodeManual"
      }
    }
  },
  "ConnectionStrings": {
    "umbracoDbDSN": "Server=sqlserver;Database=TestUmbraco;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true;", //if you run locally you can use localhost,1433 instead of sqlserver
    "umbracoDbDSN_ProviderName": "Microsoft.Data.SqlClient"
  }
}
